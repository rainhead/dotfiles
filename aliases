# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias grep='grep -R'
alias po=popd

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
#alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Rust
alias build-linux='docker run --rm --user "$(id -u)":"$(id -g)" -v "$PWD":/usr/src/myapp -w /usr/src/myapp rust:1 cargo build'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
